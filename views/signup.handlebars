<div class="card container col-md-4 col-lg- 6">
    <div class="card-body">
        <h3 class="card-header text-center">Sign Up</h3>
        <form id="signup-form">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input type="text" class="form-control" id="username-signup" autofocus="true">
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" autofocus="true" id="password-signup">
            </div>
            <div class="justify-content-center col text-center">
                <button type="submit" class="btn btn-primary btn-lg">Signup Now</button>
            </div>
            
        </form>

    </div>
</div>


<script src="/js/signup.js"></script>